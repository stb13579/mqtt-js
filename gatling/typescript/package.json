{
  "name": "gatling-ts-demo",
  "version": "3.14.500",
  "private": true,
  "type": "module",
  "main": "target/bundle",
  "dependencies": {
    "@gatling.io/core": "3.14.500",
    "@gatling.io/http": "3.14.500",
    "@gatling.io/mqtt": "3.14.500"
  },
  "devDependencies": {
    "@gatling.io/cli": "3.14.500",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "typescript": "5.9.2"
  },
  "scripts": {
    "clean": "rimraf target",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "check": "tsc --noEmit",
    "build": "tsc --noEmit && gatling build --typescript",
    "recorder": "gatling recorder --typescript",
    "basicSimulation": "tsc --noEmit && gatling run --typescript --simulation basicSimulation"
  }
}
